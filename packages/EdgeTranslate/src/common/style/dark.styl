/* 深色模式样式 */

.dark-mode
  /* 全局颜色变量 */
  --bg-primary: #1e1e1e
  --bg-secondary: #2d2d30
  --bg-tertiary: #3e3e42
  --text-primary: #cccccc
  --text-secondary: #999999
  --border-color: #464647
  --hover-color: #404040
  --color-primary: #007acc

/* 深色模式 - 选项页面 */
.dark-mode #option
  background-color: var(--bg-primary)
  box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.5)

.dark-mode body
  background-color: var(--bg-secondary)
  color: var(--text-primary)

.dark-mode header
  color: var(--color-primary)

.dark-mode footer
  color: var(--text-secondary)

.dark-mode footer a
  color: var(--text-secondary)

.dark-mode .checked-label
  color: var(--text-primary)

.dark-mode .setting-title
  color: var(--text-primary)

/* 深色模式 - 弹出页面 */
.dark-mode .frame
  background-color: var(--bg-primary)

.dark-mode select
  background-color: var(--bg-tertiary)
  color: var(--text-primary)
  border: 1px solid var(--border-color)

.dark-mode #translate_input
  background-color: var(--bg-tertiary)
  color: var(--text-primary)
  border: var(--color-primary) solid 1px

.dark-mode #translate_input:focus
  outline: var(--color-primary) solid 1px

.dark-mode #translateSubmit
  background-color: var(--color-primary)
  border-color: var(--color-primary)

.dark-mode #hint_message
  color: #ff6b6b

.dark-mode #setting-switch
  color: var(--text-secondary)

.dark-mode #setting-switch:hover
  color: var(--text-primary)

.dark-mode #exchange
  color: var(--color-primary)

.dark-mode #page-translate a
  color: var(--color-primary)

.dark-mode #page-translate a:active
  color: #00aaff

/* 深色模式 - 表单元素 */
.dark-mode .switch
  background: var(--bg-tertiary)
  border-color: var(--border-color)

.dark-mode .switch:after
  background-color: var(--text-primary)

.dark-mode .switch:checked
  border-color: var(--color-primary)
  background-color: var(--color-primary)

.dark-mode .checkbox
  background-color: var(--bg-tertiary)
  border-color: var(--border-color)

.dark-mode .checkbox:checked
  background-color: var(--color-primary)
  border-color: var(--color-primary)

.dark-mode .radio
  background-color: var(--bg-tertiary)
  border-color: var(--border-color)

.dark-mode .radio:checked
  border-color: var(--color-primary)
  background-color: var(--bg-tertiary)

.dark-mode .radio:checked:before
  background-color: var(--color-primary)

/* Translate Result Panel */
.dark-mode .Panel
  background: var(--bg-primary) !important
  color: var(--text-primary) !important
  box-shadow: 0px 8px 12px 5px rgba(0, 0, 0, 0.5) !important

.dark-mode .HeadIcon
  background-color: var(--bg-secondary) !important

.dark-mode .HeadIcon svg
  fill: var(--text-secondary) !important

.dark-mode .HeadIcon:hover svg
  fill: var(--text-primary) !important

.dark-mode .simplebar-scrollbar:before
  background-color: var(--scrollbar-color) !important

/* Translate Result Content */
.dark-mode .Block
  background-color: var(--bg-secondary) !important
  border-color: var(--border-color) !important

.dark-mode .BlockSplitLine
  background-color: var(--border-color) !important

.dark-mode .SynonymWord
  border-color: var(--border-color) !important
  color: var(--text-primary) !important
  background-color: var(--bg-tertiary) !important

.dark-mode .DefinitionExample
  color: var(--text-secondary) !important

.dark-mode .Position
  color: var(--text-secondary) !important

.dark-mode .SynonymTitle
  color: var(--text-secondary) !important

.dark-mode .Source, .dark-mode .Target
  color: var(--text-primary) !important

.dark-mode .TextLine
  color: var(--text-primary) !important

.dark-mode .BlockHeadTitle
  color: var(--text-primary) !important